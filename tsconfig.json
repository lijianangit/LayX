{
    "compileOnSave": true,
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "built",
        "target": "ES5",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "module": "CommonJS",
        // "noUnusedLocals": true,
        "strict": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "pretty": true,
        "sourceMap": true
    },
    "include": [
        "./app/**/*"
    ],
    "exclude": [
        "./node_modules"
    ]
}