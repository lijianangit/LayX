{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "es2015",
            "dom"
        ],
        "module": "commonjs",
        "outDir": "./built",
        "removeComments": true,
        "strict": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "pretty": true,
        // "incremental": true,
        // "sourceMap": true
    },
    "include": [
        "./src/**/*",
        "./types/**/*",
    ],
    "exclude": [
        "./node_modules"
    ]
}